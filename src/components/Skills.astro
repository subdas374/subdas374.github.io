---
const skillCategories = [
  {
    title: "Hardware",
    skills: ["Routers & Switches", "Network Devices", "PC Assembly", "Cable Management", "Server Hardware"]
  },
  {
    title: "Networking",
    skills: ["TCP/IP", "DHCP & DNS", "VLANs", "Routing Protocols", "Network Security", "Subnetting"]
  },
  {
    title: "Operating Systems",
    skills: ["Windows Server", "Linux/Ubuntu", "macOS", "Virtualization"]
  },
  {
    title: "Tools & Software",
    skills: ["Packet Tracer", "Wireshark", "VMware", "VirtualBox", "PuTTY"]
  },
  {
    title: "Programming",
    skills: ["Python", "Bash Scripting", "PowerShell", "PHP", "Basic Web Development"]
  },
  {
    title: "Other Skills",
    skills: ["Troubleshooting", "Documentation", "Customer Support", "Team Collaboration"]
  }
];
---

<section id="skills" class="py-20 px-4 bg-gray-50 dark:bg-gray-900">
  <div class="container mx-auto max-w-6xl">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 text-gray-900 dark:text-white">
      Technical Skills
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {skillCategories.map(category => (
        <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-lg hover:shadow-xl transition">
          <h3 class="text-xl font-bold mb-4 text-blue-600 dark:text-blue-400">
            {category.title}
          </h3>
          <ul class="space-y-2">
            {category.skills.map(skill => (
              <li class="flex items-center text-gray-700 dark:text-gray-300">
                <svg class="w-5 h-5 mr-2 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                {skill}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>
